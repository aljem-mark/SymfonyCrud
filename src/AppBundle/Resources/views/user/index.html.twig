{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12">
            {% for label, messages in app.flashes(['success', 'danger']) %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>

    <div class="row justify-content-between align-items-center my-md-3">
        <div class="col-auto">
            <h1 class="mb-0">Users</h1>
        </div>
        <div class="col-auto">
            <form action="{{ path('user_list') }}" method="GET">
                <div class="input-group">
                    <input type="text" class="form-control" name="filter" placeholder="Search..." aria-label="Search..." aria-describedby="filter">
                    <div class="input-group-append">
                        <button class="btn btn-secondary" type="submit" id="filter">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">{{ knp_pagination_sortable(users, '#', 'a.id') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(users, 'Name', 'a.name') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(users, 'Username', 'a.username') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(users, 'Email', 'a.email') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(users, 'Gender', 'a.gender') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(users, 'Description', 'a.description') }}</th>
                    <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr>
                    <th scope="row">{{ user.id }}</th>
                    <td>{{ user.name }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.gender == 'm' ? 'Male' : 'Female' }}</td>
                    <td>{{ user.description }}</td>
                    <td>
                        <a class="btn btn-success" href="{{ path('user_edit', {'id': user.id}) }}" role="button">Edit</a>
                        {# <button type="button" class="btn btn-info toggle-editable" role="button">Inline Edit</button> #}
                        <a class="btn btn-danger" href="{{ path('user_delete', {'id': user.id}) }}" role="button">Delete</a>
                    </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="row navigation justify-content-center">
                {{ knp_pagination_render(users) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}